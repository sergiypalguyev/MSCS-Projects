<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.UpdatePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToolAvailabilityServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.ToolAvailabilityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeReservationServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.MakeReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PickUpReservationServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.PickUpReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DropOffReservationServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.DropOffReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToolDetailsServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.ToolDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewToolServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.AddNewToolServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateClerkReportServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.GenerateClerkReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateCustomerReportServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.GenerateCustomerReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateToolReportServlet</servlet-name>
        <servlet-class>edu.gatech.dbclass.web.GenerateToolReportServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <url-pattern>/login/update/password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToolAvailabilityServlet</servlet-name>
        <url-pattern>/tool/availability</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToolDetailsServlet</servlet-name>
        <url-pattern>/tool/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewToolServlet</servlet-name>
        <url-pattern>/tool/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeReservationServlet</servlet-name>
        <url-pattern>/reservation/make</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PickUpReservationServlet</servlet-name>
        <url-pattern>/reservation/pickup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DropOffReservationServlet</servlet-name>
        <url-pattern>/reservation/dropoff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateClerkReportServlet</servlet-name>
        <url-pattern>/report/clerk</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateCustomerReportServlet</servlet-name>
        <url-pattern>/report/customer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateToolReportServlet</servlet-name>
        <url-pattern>/report/tool</url-pattern>
    </servlet-mapping>
</web-app>